{
  "name": "@robotlegsjs/pixi-signalmediator",
  "version": "2.0.0",
  "description": "TypeScript port of Robotlegs Extension SignalMediator",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "test": "karma start --single-run",
    "mocha": "nyc mocha",
    "autoformat": "prettier --config .prettierrc --write --list-different \"{src,static,test,example,definitions}{/**/,/}*.{html,css,js,json,ts}\"",
    "tslint-check:src": "tslint-config-prettier-check ./tslint.json",
    "tslint-check:test": "tslint-config-prettier-check ./tslint.test.json",
    "tslint:src": "tslint --project tsconfig.json",
    "tslint:test": "tslint --config tslint.test.json --project tsconfig.test.json",
    "tslint": "npm run tslint-check:src && npm run tslint-check:test && npm run tslint:src && npm run tslint:test",
    "clean-up": "rimraf .nyc_output && rimraf coverage && rimraf lib && rimraf lib-test && rimraf dist && rimraf dist-test",
    "compile:src": "tsc -d --importHelpers",
    "compile:test": "tsc -p tsconfig.test.json -d --importHelpers",
    "dist:dev": "webpack",
    "dist:production": "webpack --env production",
    "build": "npm run clean-up && npm run compile:src",
    "prepare": "npm run clean-up && npm run compile:src",
    "publish-please": "npm run tslint && npm run autoformat && npm run clean-up && npm run test && publish-please"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "check-coverage": true,
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "url": "https://github.com/RobotlegsJS/Robotlegs/tree/master/packages/pixi-signalmediator"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "keywords": [
    "TypeScript",
    "Robotlegs",
    "IoC",
    "Pixi"
  ],
  "author": "RobotlegsJS",
  "contributors": [
    "Do Duc Cuong <cuongdd2@gmail.com>",
    "Pedro Antonio Souza Viegas <pedroasv@gmail.com>",
    "Tiago Schenkel <tiago.schenkel@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RobotlegsJS/Robotlegs/issues"
  },
  "homepage": "https://github.com/RobotlegsJS/Robotlegs/tree/master/packages/pixi-signalmediator#readme",
  "files": [
    "lib"
  ],
  "directories": {
    "lib": "./lib"
  },
  "dependencies": {
    "@robotlegsjs/core": "^2.0.0",
    "@robotlegsjs/pixi": "^2.0.0",
    "@robotlegsjs/signals": "^1.1.0",
    "tslib": "^2.2.0"
  },
  "peerDependencies": {
    "pixi.js": "^5.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/bluebird": "^3.5.35",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/sinon": "^10.0.1",
    "@types/webpack-env": "^1.16.0",
    "bluebird": "^3.7.2",
    "browserify-versionify": "^1.0.6",
    "chai": "^4.3.4",
    "es6-map": "^0.1.5",
    "es6-symbol": "^3.1.3",
    "glslify": "^7.1.1",
    "imports-loader": "^3.0.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^6.3.2",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-es6-shim": "^1.0.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sinon-chai": "^2.0.2",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-sourcemap-writer": "^0.1.2",
    "karma-webpack": "^5.0.0",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "pixi.js": "^5.2.1",
    "prettier": "^2.3.0",
    "puppeteer": "^9.1.1",
    "reflect-metadata": "^0.1.13",
    "remap-istanbul": "^0.13.0",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.1",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.19",
    "terser-webpack-plugin": "^5.1.2",
    "ts-loader": "^9.2.2",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~4.2.4",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2"
  }
}
